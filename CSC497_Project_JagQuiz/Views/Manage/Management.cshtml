@model CSC497_Project_JagQuiz.Models.ManagementViewModel

@{
    ViewBag.Title = "CourseManagement";
}

<h2>Course Management</h2>

<div class="container">
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#NewCourse">Add a New Course</a></li>
        @{
            foreach (var item in Model.courseManagement.courses)
            {
                <li><a data-toggle="tab" href="#@item.courseName.Replace(" ", "")">@item.courseName</a></li>
            }
        }
    </ul>
    <div class="tab-content">
        <div id="NewCourse" class="tab-pane fade in active">
            <div class="panel">
                <div class="panel-body">
                    @using (Html.BeginForm("AddCourse", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(m => m.courseManagement.inputCourse)
                            @Html.TextAreaFor(m => m.courseManagement.inputCourse)
                        </div>
                        <div class="form-group">
                            <input type="submit" value="AddCourse" class="btn btn-default" />
                        </div>
                    }
                </div>
            </div>
        </div>
        @{
            foreach (var item in Model.courseManagement.courses)
            {
                <div id="@item.courseName.Replace(" ", "")" class="tab-pane fade">
                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#@String.Concat(new string[]{"Home", @item.courseName.Replace(" ", "")})">Home</a></li>
                        <li><a data-toggle="tab" href="#@String.Concat(new string[]{"Students", @item.courseName.Replace(" ", "")})">Students</a></li>
                        <li><a data-toggle="tab" href="#@String.Concat(new string[]{"Terms", @item.courseName.Replace(" ", "")})">Terms</a></li>
                    </ul>
                    <div class="tab-content">
                        <div id=@String.Concat(new string[]{"Home", @item.courseName.Replace(" ", "")}) class="tab-pane fade in active">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="panel">
                                            <div class="panel-heading">Course Information</div>
                                            <div class="panel-body">
                                                @Html.Label("Course Name: ")
                                                @Html.DisplayFor(m => item.courseName)
                                                <br />
                                                @Html.Label("Course Owner: ")
                                                @Html.DisplayFor(m => item.courseName)
                                                <br />
                                                @Html.Label("Course Admins: ")
                                                @Html.DisplayFor(m => item.courseName)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="panel">
                                            <div class="panel-heading"> Course Options</div>
                                            <div class="panel-body">
                                                @using (Html.BeginForm("ModifyCourse", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                                {
                                                    @Html.AntiForgeryToken()
                                                    @Html.HiddenFor(m => m.courseManagement.activeCourse, new { Value = item.courseName })
                                                    <div class="form-group">
                                                        @Html.LabelFor(m => m.courseManagement.modifyCourse)
                                                        <br />
                                                        @Html.TextBoxFor(m => m.courseManagement.modifyCourse)
                                                        <br />
                                                        <input type="submit" class="btn btn-default" value="Modify Course" />
                                                    </div>
                                                }
                                                <br />
                                                @using (Html.BeginForm("DeleteCourse", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                                {
                                                    @Html.AntiForgeryToken()
                                                    <div class="form-group">
                                                        @Html.HiddenFor(m => m.courseManagement.activeCourse, new { Value = item.courseName })
                                                        <input type="submit" class="btn btn-default" value="Delete Course" />
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div id=@String.Concat(new string[]{"Terms", @item.courseName.Replace(" ", "")}) class=" tab-pane fade">
                            <div class="container">
                                <table id="tableStudents" class="table table-striped table-bordered" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Term</th>
                                            <th>Definition</th>
                                            <th>Module</th>
                                            <th>Average Score</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                foreach (var local in @item.terms)
                {
                    <tr>
                        <td>@local.termName</td>
                        <td>@local.definition</td>
                        <td>Place Holder</td>
                        <td>@local.score</td>
                        <td>
                            @using (@Html.BeginForm("DeleteTerms", "Manage", FormMethod.Post, htmlAttributes: new { id = "", style = "color:white" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(m => m.termManagement.singleTerm, new { value = local.termName })
                                <input class="btn btn-link" type="submit" value="Delete" />
                            }
                        </td>
                    </tr>
                }
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="container">
                                <div class="panel">
                                    <div class="panel-heading">Add Terms</div>
                                    @using (Html.BeginForm("AddOneTerm", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.HiddenFor(m => m.courseManagement.activeCourse, new { Value = item.courseName })
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.termManagement.singleTerm)
                                            @Html.TextBoxFor(m => m.termManagement.singleTerm)
                                            <br />
                                            @Html.LabelFor(m => m.termManagement.singleDef)
                                            @Html.TextBoxFor(m => m.termManagement.singleDef)
                                            <br />
                                            @Html.LabelFor(m => m.termManagement.module)
                                            @Html.TextBoxFor(m => m.termManagement.module)
                                            <br />
                                            <input type="submit" class="btn btn-default" value="Add Term" />
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div id=@String.Concat(new string[]{"Students", @item.courseName.Replace(" ", "")}) class="tab-pane fade">
                            <div class="container">
                                <table id="tableStudents" class="table table-striped table-bordered" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <td>Last Name</td>
                                            <td>First Name</td>
                                            <td>Email</td>
                                            <td>Average Score</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                foreach (var local in @item.students)
                {
                    <tr>
                        <td>@local.lastName</td>
                        <td>@local.firstName</td>
                        <td>@local.email</td>
                        <td>@local.score</td>
                    </tr>
                }
                                        }
                                    </tbody>
                                </table>
                            </div>


                        </div>
                    </div>
                </div>
            }
        }

    </div>
</div>