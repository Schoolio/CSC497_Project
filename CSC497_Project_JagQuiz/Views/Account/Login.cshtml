@using CSC497_Project_JagQuiz.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<div class="row" style="padding-top:10px; padding-bottom:10px">
    <div class="col-md-3" style="float: none; margin: 0 auto">
        <div class="panel panel-default">
            <div class="panel-heading text-center" style="align-content:center">
                <h3>Login</h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password)
                    @Html.TextBoxFor(m => m.Password)
                </div>
            </div>
            <div class="panel-footer">
                <div class="form-group">
                    <input class="btn btn-default" type="search" value="Log In" />
                    <input class="btn btn-default" type="search" value="Register" style="float:right"/>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}