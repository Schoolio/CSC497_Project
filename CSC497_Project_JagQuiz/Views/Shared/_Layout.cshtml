<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #00205B;
        }

        li {
            float: left;
        }

            li a {
                display: block;
                color: white;
                text-align: center;
                padding: 16px;
                text-decoration: none;
            }

                li a:hover {
                    background-color: #BF0D3E;
                }
    </style>

</head>
<body>
    <div id="Header">
        <div id="Logo" align="center">
            <img src="~/Content/Sample.png" height="270" width="1200" />
        </div>
        <div id="Header" class ="navbar" style="padding-bottom: 15px">
            <ul>
                <li class="active">@Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { id = "" })</li>
                <li class="active">@Html.ActionLink("Exercises", "Index", "Exercise", routeValues: null, htmlAttributes: new { id = "" })</li>
                <li class="active">@Html.ActionLink("Account", "AccountOptions", "Account", routeValues: null, htmlAttributes: new { id = "" })</li>
                <li class="active">@Html.ActionLink("Contact", "Contact", "Home", routeValues: null, htmlAttributes: new { id = "" })</li>
            </ul>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
    <footer class="footer" style="background-color: #BF0D3E; height:60px;position: relative;width: 100%;height: 60px;line-height: 60px">
        <div class="container text-center" style="width: auto;max-width: 680px;padding: 0 15px;">
            <span class="text-center">Untouchable Consulting Fall of 2017</span>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
