<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #00205B;
        }

        li {
            float: left;
        }

            li a {
                display: block;
                color: white;
                text-align: center;
                padding: 16px;
                text-decoration: none;
            }

                li a:hover {
                    background-color: #BF0D3E;
                }
    </style>

</head>
<body>
    <div class="Logo" align="center">
        <img src="~/Content/Sample.png" height="270" width="1200"/>
    </div>
    <div id="Header">
        <ul>
            <li class="active">@Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { id = "" })</li>
            <li class="active">@Html.ActionLink("Exercises", "Index", "Exercise", routeValues: null, htmlAttributes: new { id = "" })</li>
            <li class="active">@Html.ActionLink("About", "About", "Home", routeValues: null, htmlAttributes: new { id = "" })</li>
            <li class="active">@Html.ActionLink("Contact", "Contact", "Home", routeValues: null, htmlAttributes: new { id = "" })</li>
        </ul>
    </div>
    <div>
        @RenderBody()
    </div>
    <div id="Footer" style="height : 150px;background-color : #BF0D3E; align-self:baseline">
        <footer align="center">
            <p>Untouchable Consulting</p>
            <p>Fall 2017 - Senior Project</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
